{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": []
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ],
  "paths": {
    "@components/*": [
      "app/components/*"
    ],
    "@models/*": [
      "app/models/*"
    ],
    "@modules/*": [
      "app/modules/*"
    ],
    "@pipes/*": [
      "app/pipes/*"
    ],
    "@services/*": [
      "app/services/*"
    ],
    "@util/*": [
      "app/util/*"
    ],
  }
}
